                    var next_steps = $("#txtNext_stepsGroup").val().replace(' ', ' ');
                    var create_owner = $("#txtCreateOwner").val();
                    var log_result = $("#txtLogResultGroup").val();

                    $.ajax({
                        type: 'POST',
