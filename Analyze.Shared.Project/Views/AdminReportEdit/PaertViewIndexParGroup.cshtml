@using Analyze.Shared.Common.Report;
@model ParList

@*基础信息保存*@
@if (Model.ParInformationSummary != null)
{
    using (Html.BeginForm("Index", "AdminReportEdit", FormMethod.Post,
                new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">

            @foreach (var item in Model.ParInformationSummary)
            {
                @Html.HiddenFor(m => item.tracking_number, new { id = "txtTracking_number" })
                @*标题*@
                <div class="form-group">
                    <h1 class="text-center">@Html.DisplayFor(m => item.title)</h1>
                </div>
                <div class="text-center">
                    <button class="btn btn-link btn-lg" type="button" onclick="showFile(20)"><i class="glyphicon glyphicon-refresh"></i>点击此处刷新当前模块</button>/
                    <button class="btn btn-link btn-lg" type="button" data-toggle="collapse" data-parent="#accordion" href="#collapseGroupLog">
                        <i class="glyphicon glyphicon-list"></i>点击此处展开/收缩日志
                    </button>
                    <div id="collapseGroupLog" class="panel-collapse collapse">
                        @Html.TextAreaFor(m => item.log_result, new { @class = "form-control", @id = "txtLogResultGroup", @autocomplete = "off", @readonly = "true", @rows = "5" })
                    </div>
                </div>
                <div class="form-horizontal">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><label>标题</label></td>
                                <td colspan="5">
                                    @Html.TextBoxFor(m => item.title, new
                                            {
                                                @id = "txtTitle",
                                                @class = "form-control placeholder-no-fix",
                                                @type = "text",
                                                @autocomplete = "off",
                                                @placeholder = "请输入标题..."
                                            })
                                    @Html.ValidationMessage("title", new { style = "color: red;" })
                                </td>
                            </tr>
                            <tr>
                                <td rowspan="2"><label>基础信息*</label></td>
                                <td>
                                    <label>发生时间*</label>
                                    @Html.TextBoxFor(m => item.tracking_time, new
                                        {
                                            @id = "txtTracking_time",
                                            @class = "form-control placeholder-no-fix",
                                            @type = "text",
                                            @autocomplete = "off",
                                            @placeholder = "请输入发生时间..."
                                        })
                                    @Html.ValidationMessage("tracking_time", new { style = "color: red;" })
                                </td>
                                <td>
                                    <label>发生地点*</label>
                                    @Html.TextBoxFor(m => item.site, new
                                    {
                                        @id = "txtSite",
                                        @class = "form-control placeholder-no-fix",
                                        @type = "text",
                                        @autocomplete = "off",
                                        @placeholder = "请输入发生地点..."
                                    })
                                    @Html.ValidationMessage("site", new { style = "color: red;" })
                                </td>
                                <td>
                                    <label>产品型号*</label>
                                    @Html.TextBoxFor(m => item.model, new
                                    {
                                        @id = "txtModel",
                                        @class = "form-control placeholder-no-fix",
                                        @type = "text",
                                        @autocomplete = "off",
                                        @placeholder = "请输入产品型号..."
                                    })
                                    @Html.ValidationMessage("model", new { style = "color: red;" })
                                </td>
                                <td>
                                    <label>不良率*</label>
                                    @Html.TextBoxFor(m => item.defect_rate, new
                                    {
                                        @id = "txtDefect_rate",
                                        @class = "form-control placeholder-no-fix",
                                        @type = "text",
                                        @autocomplete = "off",
                                        @placeholder = "请输入不良率..."
                                    })
                                    @Html.ValidationMessage("defect_rate", new { style = "color: red;" })
                                </td>
                                <td>
                                    <label>是否停线</label><br />
                                    @Html.RadioButtonFor(m => item.isline, 0, new { @id = "isline0", @name = "isline" })否
                                    @Html.RadioButtonFor(m => item.isline, 1, new { @id = "isline1", @name = "isline" })是
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>设计方</label>
                                    @{
                                        List<SelectListItem> rd_list = new List<SelectListItem>();
                                        rd_list.Add(new SelectListItem { Text = "Inhouse", Value = "Inhouse", Selected = ("Inhouse" == item.rd) });
                                        rd_list.Add(new SelectListItem { Text = "HQ", Value = "HQ", Selected = ("HQ" == item.rd) });
                                        rd_list.Add(new SelectListItem { Text = "WT", Value = "WT", Selected = ("WT" == item.rd) });
                                        rd_list.Add(new SelectListItem { Text = "LC", Value = "LC", Selected = ("LC" == item.rd) });
                                        rd_list.Add(new SelectListItem { Text = "TN", Value = "TN", Selected = ("TN" == item.rd) });
                                        rd_list.Add(new SelectListItem { Text = "CNCE", Value = "CNCE", Selected = ("CNCE" == item.rd) });
                                    }
                                    @Html.DropDownListFor(m => item.rd, rd_list, "---请选择---", new { @id = "txtRd", @class = "btn dropdown-toggle form-control" })
                                    @Html.ValidationMessage("rd", new { @style = "color:yellow"})
                                </td>
                                <td>
                                    <label>产品类型</label>
                                    @{
                                        List<SelectListItem> productCategory_list = new List<SelectListItem>();
                                        productCategory_list.Add(new SelectListItem { Text = "PH", Value = "PH", Selected = ("PH" == item.product_category) });
                                        productCategory_list.Add(new SelectListItem { Text = "TB", Value = "TB", Selected = ("TB" == item.product_category) });
                                    }
                                    @Html.DropDownListFor(m => item.product_category, productCategory_list, "---请选择---", new { @id = "txtProduct_category", @class = "btn dropdown-toggle form-control" })
                                    @Html.ValidationMessage("product_category", new { @style = "color:yellow" })
                                </td>
                                <td>
                                    <label>问题类别</label>
                                    @{
                                        List<SelectListItem> issueCategory_list = new List<SelectListItem>();
                                        issueCategory_list.Add(new SelectListItem { Text = "设计问题", Value = "设计问题", Selected = ("设计问题" == item.issue_category) });
                                        issueCategory_list.Add(new SelectListItem { Text = "软件问题", Value = "软件问题", Selected = ("软件问题" == item.issue_category) });
                                        issueCategory_list.Add(new SelectListItem { Text = "物料问题", Value = "物料问题", Selected = ("物料问题" == item.issue_category) });
                                        issueCategory_list.Add(new SelectListItem { Text = "制程问题", Value = "制程问题", Selected = ("制程问题" == item.issue_category) });
                                    }
                                    @Html.DropDownListFor(m => item.issue_category, issueCategory_list, "---请选择---", new { @id = "txtIssue_category", @class = "btn dropdown-toggle form-control" })
                                    @Html.ValidationMessage("issue_category", new { @style = "color:yellow" })
                                </td>
                                <td>
                                    <label>状态</label>
                                    @{
                                        List<SelectListItem> status_list = new List<SelectListItem>();
                                        status_list.Add(new SelectListItem { Text = "Ongoing", Value = "Ongoing", Selected = ("Ongoing" == item.status) });
                                        status_list.Add(new SelectListItem { Text = "Tracking", Value = "Tracking", Selected = ("Tracking" == item.status) });
                                        status_list.Add(new SelectListItem { Text = "Closed", Value = "Closed", Selected = ("Closed" == item.status) });
                                    }
                                    @Html.DropDownListFor(m => item.status, status_list, "---请选择---", new { @id = "txtStatus", @class = "btn dropdown-toggle form-control" })
                                    @Html.ValidationMessage("status", new { @style = "color:yellow" })
                                </td>
                                <td>
                                    <label>创建人</label>
                                    @Html.TextBoxFor(m => item.create_owner, new
                                            {
                                                @id = "txtCreateOwner",
                                                @class = "form-control placeholder-no-fix",
                                                @type = "text",
                                                @readonly=true
                                            })
                                    @Html.ValidationMessage("create_owner", new { style = "color: red;" })
                                </td>
                                
                            </tr>
                            <tr>
                                <td><label>问题描述</label></td>
                                <td colspan="5">
                                    @Html.TextAreaFor(m => item.problem_description, new
                                        {
                                            @id = "txtProblem_descriptionGroup",
                                            @class = "form-control placeholder-no-fix",
                                            @autocomplete = "off",
                                            @rows = "5",
                                            @placeholder = "请输入问题描述..."
                                        })
                                </td>
                            </tr>
                            <tr>
                                <td><label>分析结论</label></td>
                                <td colspan="5">
                                    @Html.TextAreaFor(m => item.root_cause, new
                                        {
                                            @id = "txtRoot_causeGroup",
                                            @class = "form-control placeholder-no-fix",
                                            @autocomplete = "off",
                                            @rows = "5",
                                            @placeholder = "请输入分析结论..."
                                        })
                                </td>
                            </tr>
                            <tr>
                                <td><label>排查图片</label></td>
                                <td colspan="5">
                                    <div style="width:100%;height:400px;text-align:center;">
                                        @Html.Hidden("group_image", item.group_image, new { id = "group_image" })
                                        <img id="groupImg" src="@Url.Content(item.group_image ?? "~/Content/Loading/error.png")" style="width:auto;height:auto;max-width:100%;max-height:100%;margin:auto;" class="img-thumbnail" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><label>改善措施</label></td>
                                <td colspan="5">
                                    @Html.TextAreaFor(m => item.analysis_conclusion, new
                                        {
                                            @id = "txtAnalysis_conclusionGroup",
                                            @class = "form-control placeholder-no-fix",
                                            @autocomplete = "off",
                                            @rows = "5",
                                            @placeholder = "请输入改善措施..."
                                        })
                                </td>
                            </tr>
                            <tr>
                                <td><label>下一步计划</label></td>
                                <td colspan="5">
                                    @Html.TextAreaFor(m => item.next_steps, new
                                        {
                                            @id = "txtNext_stepsGroup",
                                            @class = "form-control placeholder-no-fix",
                                            @autocomplete = "off",
                                            @rows = "5",
                                            @placeholder = "请输入下一步计划..."
                                        })
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
                <button type="button" id="btnSaveGroup" class="btn btn-primary">确认保存</button>
            }
            <br />
            @*执行成功/失败提示*@
            <div id="saveGroupAlert"><br /></div>

            <!-- The Modal -->
            @*<div id="imgModal">
                <span class="close">×</span>
                <img class="modal-content" id="img01">
                <div id="caption"></div>
            </div>*@

            @if (Model.ParFileUpload != null)
            {
                <div class="form-horizontal">
                    <br />
                    <table class="table table-bordered table-hover">
                        <caption class="text-center">附件列表</caption>
                        <thead>
                            <tr>
                                <th>文件名称</th>
                                <th>信息</th>
                                <th colspan="2">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ParFileUpload)
                            {
                                <tr>
                                    <td>@Html.ActionLink(item.file_name, "ShowFile", new { filePath = item.file_url }, new { target = "_blank" })</td>
                                    <td>
                                        @Html.DisplayFor(m => item.update_time)
                                        <span>by</span>
                                        @Html.DisplayFor(m => item.user_detailed)
                                    </td>
                                    <td>@Html.ActionLink("下载", "DownloadFile", new { filePath = item.file_url })</td>
                                    <td>
                                        @Ajax.ActionLink("删除", "DeleteFile", "AdminReportEdit", new { id = item.id, tracking_id = item.tracking_id, filePath = item.file_url, category_id = item.category_id },
