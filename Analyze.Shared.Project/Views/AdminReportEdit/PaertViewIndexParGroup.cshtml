                        data: JSON.stringify({
                            tracking_id: tracking_id, tracking_number: tracking_number, title: title, tracking_time: tracking_time,
                            site: site, model: model, defect_rate: defect_rate, rd: rd, product_category: product_category, issue_category: issue_category, status: status,
                            isline: isline, group_image: group_image, group_image_old: group_image_old,
                            problem_description: problem_description, root_cause: root_cause, analysis_conclusion: analysis_conclusion, next_steps: next_steps,create_owner:create_owner,
                            log_result: log_result, user: user_detailed
                        }),
                        dataType: "json",
                        contentType: 'application/json;charset=utf-8',
                        async: true,
                        success: function (data) {
                            showFile(20);
