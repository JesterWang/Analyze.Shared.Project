@using Analyze.Shared.Common.Report
@model ParInformationSummary

<script src="~/Scripts/Validate/jquery.validate.min.js"></script>
<script src="~/Scripts/Validate/jquery.validate.unobtrusive.min.js"></script>
@using(Html.BeginForm("Update", "AdminReportHome", FormMethod.Post,new { @class = "form-horizontal", role = "form",@id="from" }))
{
